<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="im.yuki.ganbaro.server.home.dao.CheckInDao">

    <resultMap id="BaseResultMap" type="im.yuki.ganbaro.server.home.entity.CheckIn">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="uid" column="uid" jdbcType="VARCHAR"/>
        <result property="day" column="day" jdbcType="TIMESTAMP"/>
        <result property="isDidIt" column="is_did_it" jdbcType="VARCHAR"/>
        <result property="createdTime" column="created_time" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="updatedTime" column="updated_time" jdbcType="TIMESTAMP"/>
        <result property="updatedBy" column="updated_by" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="StatResultMap" type="im.yuki.ganbaro.server.stat.entity.CheckInStat">
        <result property="uid" column="uid" jdbcType="VARCHAR"/>
        <result property="startDate" column="start_date" jdbcType="DATE"/>
        <result property="endDate" column="end_date" jdbcType="DATE"/>
        <result property="continuousDays" column="continuous_days" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,uid,day,is_did_it,created_time,created_by,updated_time,updated_by
    </sql>

    <insert id="insert" parameterType="im.yuki.ganbaro.server.home.entity.DailySentence">
        insert into check_in(uid, day, is_did_it, created_by, updated_by)
        values (#{uid},
                #{day},
                #{isDidIt},
                #{createdBy},
                #{updatedBy})
    </insert>

    <select id="queryByUidAndDay" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from check_in
        where uid = #{uid}
        and day = #{date}
    </select>

    <select id="queryByUidAndDayRange" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from check_in
        where uid = #{uid}
        <if test="startDate != null">
            and day <![CDATA[ >= ]]> #{startDate}
        </if>
        <if test="endDate != null">
            and day <![CDATA[ <= ]]> #{endDate}
        </if>
    </select>

    <select id="queryMaxContinuousByUid" resultMap="StatResultMap">
        select t2.uid,
               t2.day - (t2.rn || ' day')::interval as date_group,
               min(t2.day)                          as start_date,
               max(t2.day)                          as end_date,
               count(1)                             as continuous_days
        from (select t1.uid,
                     t1.day,
                     row_number() over (partition by uid order by day) as rn
              from (select uid,
                           day
                    from check_in
                    where uid = #{uid}
                      and is_did_it = 'Y'
                   ) t1
             ) t2
        group by uid, t2.day - (t2.rn || ' day')::interval
        order by continuous_days desc
        limit 1
    </select>

    <select id="queryCurrentContinuousByUid" resultMap="StatResultMap">
        select t2.uid,
               t2.day - (t2.rn || ' day')::interval as date_group,
               min(t2.day)                          as start_date,
               max(t2.day)                          as end_date,
               count(1)                             as continuous_days
        from (select t1.uid,
                     t1.day,
                     row_number() over (partition by uid order by day) as rn
              from (select uid,
                           day
                    from check_in
                    where uid = #{uid}
                      and is_did_it = 'Y'
                   ) t1
             ) t2
        group by uid, t2.day - (t2.rn || ' day')::interval
        order by end_date desc
        limit 1
    </select>

    <update id="update">
        update check_in
        set is_did_it    = #{isDidIt},
            updated_time = now()
        where uid = #{uid}
          and day = #{date}
    </update>
</mapper>
